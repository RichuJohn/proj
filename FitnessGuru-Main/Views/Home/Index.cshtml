@{
    ViewBag.Title = "Home Page";
}


<div id="carouselDiv" class="row">
    <div class="col-xs-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" height="100px">

            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>


            <div class="carousel-inner">
                <div class="item active">
                    <img class="img img-responsive" src="~/images/img_bg_1.jpg" />
                </div>
                <div class="item">
                    <img class="img img-responsive" src="~/images/img_bg_3.jpg" />
                </div>
                <div class="item">
                    <img class="img img-responsive" src="~/images/img_bg_4.jpg" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-xs-6">
        <h3 class="homepageDtl">Already A Member</h3>
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary" })


    </div>
    <div class="col-xs-6">
        <h3 class="homepageDtl">New to Fitness Guru</h3>
        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary" })
    </div>
</div>