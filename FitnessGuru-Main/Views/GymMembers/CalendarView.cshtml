@model FitnessGuru_Main.Models.Session

@{
    ViewBag.Title = "Calendar";
}

<div id="userId" style="display: none">@ViewBag.UserId</div>
<div>
    <h3>Personal Planner</h3>
    <hr />
    <div class="row">
        <div class="col-xs-7">
            <div id="memberCalendar"></div>
        </div>
        <div style="margin-top:100px" class="col-xs-4 col-xs-offset-1">
            @*<div style="text-align: center" class="row">
                    <h4>Legend</h4>
                </div>*@
            <div class="row">
                <div class="col-xs-12">
                    <div class="foo joined"></div> Joined Sessions
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="foo upcoming"></div> Other Upcoming Sessions
                </div>
            </div>
        </div>
        <div style="margin-top:50px" class="col-xs-4 col-xs-offset-1">
            <h4>Filter</h4>
            <input id="all" type="radio" name="join" value="All" checked="checked">
            <label for="all" class="filterOption">All</label> <br>
            <input id="join" type="radio" name="join" value="Joined">
            <label for="join" class="filterOption">Joined Sessions</label> <br>
            <input id="other" type="radio" name="join" value="Other">
            <label for="other" class="filterOption">Other Upcoming Sessions</label> <br>
        </div>
    </div>

</div>

<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p id="popUpHeading" style="color:darkslateblue; text-align :center; text-decoration-style: solid; font-size: 24px">
            <br>
        <p id="popUpContent" style="color:darkblue; text-align :center;  font-size: 16px">
            <br>
            <div style="text-align:center">
                <div class="btn btn-info" id="actionToTake" style="display:inline-block"></div>
            </div>
            
        </p>
    </div>

</div>

<p>
    @Html.ActionLink("Back to Home", "Index", "GymMembers")
</p>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.10/lodash.min.js"></script>
    @Scripts.Render("~/bundles/fullcalendar")
    <script src="~/Scripts/memberSessions.js"></script>
}
