@model IEnumerable<FitnessGuru_Main.Models.Session>

@{
    ViewBag.Title = "History";
}

<h2>Past Sessions</h2>

<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SessionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SessionAt)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.isCancelled)*@
            Was Session Cancelled
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SessionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isCancelled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                @Html.ActionLink("View Feedback", "Feedback", new { id = item.Id }, new {@class = "btn btn-info"})
            </td>
        </tr>
    }

</table>
