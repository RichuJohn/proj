<!DOCTYPE html>
@using FitnessGuru_Main.Models
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fitness Guru</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FITNESS GURU", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav main-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { id = "homeId", @class = "nav-item" })</li>
                    @if (Request.IsAuthenticated)
                    {
                        if (!User.IsInRole(RoleName.Admin))
                        {
                            var controller = User.IsInRole(RoleName.Trainer) ? "Trainers" : "GymMembers";
                            var action = User.IsInRole(RoleName.Trainer) ? "History" : "ShowHistory";
                            <li>@Html.ActionLink("Session History", @action, @controller, null, new { id = "historyId", @class = "nav-item" })</li>
                        }
                        else
                        {

                        }
                    }
                    else
                    {
                        @*<li>@Html.ActionLink("About", "About", "Home", null, new { id = "aboutId", @class = "nav-item" })</li>*@
                        <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { id = "contactId", @class = "nav-item" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fitness Guru</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatable")

    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />


    <script type="text/javascript">
        $(function () {
            $('.datetime').datetimepicker({
                format: 'YYYY-MM-DD HH:mm'
            });
        });

        $(function () {
            $('.date').datetimepicker({
                format: 'YYYY-MM-DD'
            });
        });

        $(function () {
            $(".nav-item").on("click", function () {
                var selectedItem = $(".nav-selected");
                selectedItem.removeClass("nav-selected");

                $(this).addClass("nav-selected");
            })
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
